<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'https://cdn.pixabay.com/photo/2015/09/05/23/30/bar-926256_1280.jpg' %>');">
  <div class="banner-content text-center">
    <h1><strong>GitCocktails</strong></h1>
      <p>Awesome beverages for developers</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg " %>
  </div>
</div>
<br>
<div class="container">
  <div class="row row-cols-3">
    <% @cocktails.each do |cocktail| %>
      <div class="col-3 p-2 d-flex justify-content-center">
        <div class="card-product">
          <img src="https://cdn.pixabay.com/photo/2016/11/22/18/58/alcohol-1850038_1280.jpg" />
          <div class="card-product-infos">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
